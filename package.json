{
  "name": "serviceflow",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "scripts": {
    "dev:web": "pnpm --filter ./apps/web dev",
    "dev:api": "pnpm --filter ./apps/api start:dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "build": "pnpm -r --filter ./apps/* build",
    "lint": "pnpm -r --filter ./apps/* lint"
  }
}
